<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sparksfooundation"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="184dp"
        android:fontFamily="sans-serif-condensed"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Welcome to The Sparks Foundation"
        android:textColor="#040404"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flogin"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="89dp"
        android:layout_marginBottom="310dp"
        android:background="@drawable/com_facebook_auth_dialog_background"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Login to Facebook"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#E31616"
        android:textCursorDrawable="@drawable/com_facebook_auth_dialog_background"
        app:backgroundTint="#1E88E5"
        app:icon="@drawable/com_facebook_button_icon"
        app:iconTint="#1E88E5"
        app:rippleColor="#1E88E5"
        app:strokeColor="#1E88E5" />

    <Button
        android:id="@+id/gsignin"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="206dp"
        android:autoText="false"
        android:background="#FFFFFF"
        android:text="Sign in to Google"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:icon="@color/purple_700"
        app:iconTint="#5E35B1"
        app:iconTintMode="add"
        app:rippleColor="#5E35B1"
        app:strokeColor="#5E35B1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="384dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/sparksfoundation"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp" />


</RelativeLayout>